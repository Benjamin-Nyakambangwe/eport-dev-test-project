{
  "expo": {
    "name": "FarmData Mobile",
    "slug": "farmdata-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.ben_nyakaz.farmdatamobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    },
    "fonts": [
      {
        "asset": "./assets/fonts/Inter-Regular.otf",
        "family": "Inter-Regular"
      }
    ],
    "extra": {
      "eas": {
        "projectId": "481e6670-0075-4073-b961-bb79a7456c5a"
      }
    }
  }
}
